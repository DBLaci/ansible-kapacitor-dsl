stream
    |from()
        .measurement('mem')
    |groupBy('host')
    |window()
        .period(1m)
        .every(1m)
    |alert()
        .id('{{ .Name }}/{{ index .Tags "host" }}')
        .message('{{ .ID }} is {{ .Level }}')
        .warn(lambda: "used_percent" > 80)
        .crit(lambda: "used_percent" > 90)
        .email()
        .log('/tmp/mem_alerts.log')
